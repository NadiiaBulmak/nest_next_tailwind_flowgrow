generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  previewFeatures = ["clientExtensions"]
}

datasource db {
  provider = "postgresql"
}

enum FocusSeccionType {
  SESSION
  POMODORO
}

enum FocusSeccionStatus {
  RUNNING
  PAUSED
  FINISHED
}

model User {
  id                    String                @id @default(uuid()) @db.Uuid
  email                 String                @unique
  password              String
  name                  String?
  avatar                String?

  created_at            DateTime              @default(now())
  updated_at            DateTime              @updatedAt

  tags                  Tag[]
  session_presets       SessionPreset[]
  sessions              FocusSession[]
  goal                  Goal?
}

model Tag {
  id                    String                @id @default(uuid()) @db.Uuid
  user_id               String                @db.Uuid
  user                  User                  @relation(fields: [user_id], references: [id])
  name                  String
  description           String?
  color                 String?               @default("#0000FF")
  created_at            DateTime              @default(now())
  updated_at            DateTime              @updatedAt

  sessions              FocusSession[]
}

model SessionPreset {
  id                    String                @id @default(uuid()) @db.Uuid
  user_id               String                @db.Uuid
  user                  User                  @relation(fields: [user_id], references: [id])
  name                  String
  type                  FocusSeccionType      @default(SESSION)
  duration              Int
  cycles                Int?
  rest_duration         Int?
  animation             String?
  end_sound             String?
  created_at            DateTime              @default(now())
  updated_at            DateTime              @updatedAt

  sessions              FocusSession[]
}

model FocusSession {
  id                    String                @id @default(uuid()) @db.Uuid
  user_id               String                @db.Uuid
  user                  User                  @relation(fields: [user_id], references: [id])
  preset                SessionPreset?         @relation(fields: [preset_id], references: [id])
  preset_id             String?                @db.Uuid
  tag_id                String?                @db.Uuid
  tag                   Tag?                   @relation(fields: [tag_id], references: [id])
  started_at            DateTime
  finished_at           DateTime?
  status                FocusSeccionStatus
  actual_duration_seconds       Int?
}

model Goal {
  id                    String                @id @default(uuid()) @db.Uuid
  user_id               String                @unique @db.Uuid
  user                  User                  @relation(fields: [user_id], references: [id])
  target_hours_per_day  Float                 @default(0)

  created_at            DateTime              @default(now())
  updated_at            DateTime              @updatedAt
}
